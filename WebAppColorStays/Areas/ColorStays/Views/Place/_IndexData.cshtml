@model IEnumerable<WebAppColorStays.Models.ViewModel.CsPlace>

@{
    Layout = null;
    ViewData["Action"] = "Place";
    int PageNoSelect = Convert.ToInt32(ViewData["PageNumberSelected"]);
    int PageSize = Convert.ToInt32(ViewData["PageRecordSize"]);
}

<b style="display:none" id="PaginationAt" pagenumber="@PageNoSelect" pagesize="@PageSize" netrecord="@ViewData["NetRecords"]">responseformUT SuccessPop</b>

@foreach (var item in Model)
{
    <tr>
        <td>
            @if (item.SelectStatus == true)
            {
                <span class="BnInSe14  CrBdTeBn HrTmSeo94 Cr-uPr">
                    <input type="checkbox" ClipStatus ="Selected" id="@item.Id" value="@item.Id" name="@item.Name" class="AmIndexCheckbox SeIt1o14" />
                </span>
                <a class="BnInSe17  CrBdTeBn HrTmSeo94 Cr-uPr" href="#" data-toggle="tooltip" data-placement="bottom" title="Mark UnStar" onclick="MultiButtonFunc('UnStar','@item.Id', '@item.Name','/ColorStays/Place')"><i class="UT-StarSolid"> </i> </a>
            }
            else
            {
                <span class="BnInSe14  CrBdTeBn HrTmSeo94 Cr-uPr">
                    <input type="checkbox" ClipStatus ="UnSelected" id="@item.Id" value="@item.Id" name="@item.Name" class="AmIndexCheckbox SeIt1o14" />
                </span>
                <a class="BnInSe17  CrBdTeBn HrTmSeo94 Cr-uPr" href="#" data-toggle="tooltip" data-placement="bottom" title="Mark Star" onclick="MultiButtonFunc('Star','@item.Id', '@item.Name','/ColorStays/Place')"><i class="UT-UnstarSolid"></i></a>
            }
            <a class="BnInSe15  CrBdTeBn HrTmSeo94 Cr-1Pr" href=# onclick="Details('/ColorStays/Place/Details?Id=@item.Id')" data-toggle="tooltip" data-placement="bottom" title="Detail"><i class="UT-DetailLine FtWt800"></i> </a>
            @if (item.VerifiedStatus == false && item.ActiveStatus == false && item.GlobalStatus == false)
            {
                <a class="BnInSe17  CrBdTeBn HrTmSeo94 Cr-1Pr" href="@Url.Action("Edit", new { id=item.Id })"> <i class="UT-EditFileLine FtWt800"></i> </a>
            }
        </td>
         
         
	    <td>@item.URL</td>
         
	    <td>@item.Name</td>

        <td>
            @if (item.History != null && item.History.Length > 50)
            {
                @Html.Raw(item.History.Substring(0,50))
                <div class="CrRd" onclick="ShowData(this.getElementsByClassName('DyNe')[0])">
                    ...Read More

                    <div class="DyNe">
                        @Html.Raw(item.History)
                    </div>
                </div>
            }
            else
            {
                @item.History
            }
        </td>

        <td>
            @if (item.Fact != null && item.Fact.Length > 50)
            {
                @Html.Raw(item.Fact.Substring(0,50))
                <div class="CrRd" onclick="ShowData(this.getElementsByClassName('DyNe')[0])">
                    ...Read More
                    <div class="DyNe">
                        @Html.Raw(item.Fact)
                    </div>
                </div>
            }
            else
            {
                @item.Fact
            }
        </td>

        <td>
            @if (item.Stories != null && item.Stories.Length > 50)
            {
                @Html.Raw(item.Stories.Substring(0,50))
                <div class="CrRd" onclick="ShowData(this.getElementsByClassName('DyNe')[0])">
                    ...Read More
                    <div class="DyNe">
                        @Html.Raw(item.Stories)
                    </div>
                </div>
            }
            else
            {
                @item.Stories
            }
        </td>
         
	    <td>@item.Longitude</td>
         
	    <td>@item.Latitude</td>
         
	    <td>@item.Rank</td>
         
	    <td>@item.Fk_PlaceType_Name</td>
         
	    <td>@item.PinCode</td>
         
	    <td>@item.Fk_City_Name</td>
         
	    <td>@item.Fk_State_Name</td>
         
	    <td>@item.Fk_Country_Name</td>

        <td>
            @if (item.TopThingsToKnow != null && item.TopThingsToKnow.Length > 50)
            {
                @item.TopThingsToKnow.Substring(0,50)
                <div class="CrRd" onclick="ShowData(this.getElementsByClassName('DyNe')[0])">
                    ...Read More
                    <div class="DyNe">
                        @item.TopThingsToKnow
                    </div>
                </div>
            }
            else
            {
                @item.TopThingsToKnow
            }
        </td>
        <td>@item.Rating</td>
         
	    <td>@item.StateAttraction</td>

        <td>@item.Video</td>
         
	     <td>
            @if (item.BestTimeToVisit != null && item.BestTimeToVisit.Length > 50)
            {
                @item.BestTimeToVisit.Substring(0,50)
                <div class="CrRd" onclick="ShowData(this.getElementsByClassName('DyNe')[0])">
                    ...Read More
                    <div class="DyNe">
                        @item.BestTimeToVisit
                    </div>
                </div>
            }
            else
            {
                @item.BestTimeToVisit
            }
        </td>

        <td>@item.SEOTitle</td>

        <td>@item.SEODescription</td>

        <td>@item.SEOKeywords</td>
         
	    <td>@item.Remarks</td>
         
	    <td>@item.FreezeStatus</td>
         
	    <td>@item.FreezedBy</td>
        	    <td>@if(item.VerifiedStatus == true){<span>Verified</span>}else{ <span>Pending-Verify</span>}</td>              
         
	    <td>@String.Format("{0:dd MMMM,yyyy hh:mm tt}", item.VerifiedOn)</td>
         
	    <td>@item.VerifiedBy</td>
            
	    <td>@if(item.ActiveStatus == true){<span>Activated</span>}else{ <span>Inactive</span>}</td>   
         
	    <td>@String.Format("{0:dd MMMM,yyyy hh:mm tt}", item.ActivatedOn)</td>
         
	    <td>@item.ActivatedBy</td>
         
	    <td>@String.Format("{0:dd MMMM,yyyy hh:mm tt}", item.CreatedOn)</td>
         
	    <td>@item.CreatedBy</td>
         
	    <td>@String.Format("{0:dd MMMM,yyyy hh:mm tt}", item.ModifiedOn)</td>
         
	    <td>@item.ModifiedBy</td>
         
	    <td>@item.ModificationFrequency</td>
         
	    <td>@item.GCompId</td>
         
	    <td>@item.CompId</td>
        </tr>
}
<script>
    function ShowData(element) {
        var popup = document.getElementById('PopUpScript');
        popup.style.minHeight = "50%";
        popup.style.left = "25%";
        popup.style.top = "18%";
        popup.style.width = "50%";
        popup.style.overflowX = "auto";
        document.getElementById('PopUpScript').style.display = 'block';
        document.getElementById('PopUpScriptDetailContentID').innerHTML = element.innerHTML;
    }
</script>

